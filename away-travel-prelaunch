   <script>
    function postContactToGoogle() {
        var email = $('#Email').val();
            $.ajax({
                url: "https://docs.google.com/forms/d/1-yi_XjKft7tUgTll7pA8-4AX4UvjWGlbsyl8_DBY53k/formResponse",
                data: { "entry.1269208196": email,
				},
                type: "POST",
                dataType: "xml",
                statusCode: {
                    0: function () {
                        window.location.replace("http://www.awaytravel.com");
                    },

                    200: function () {
                        window.location.replace("http://www.awaytravel.com");
                    }
                }
            });
    }
</script>
